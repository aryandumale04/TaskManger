<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full outline-none rounded-md px-5 py-2 bg-zinc-800" type ="text" placeholder="Title goes here" name="title">
                <textarea class="block w-full outline-none  rounded-md mt-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="Write your task details here" name="details"></textarea>
                <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" value="Create Task">

            </form>

        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap ">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task   w-72 px-3 rounded-md py-4 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter "><%= val %></h1>
                            <div class="flex w-full  mt-3 justify-between items-center">
                                <a class="text-blue-500 inline " href="/file/<%= val %>" >
                                    Read More
                                </a>
                                <a class="text-zinc-600" href="/edit/<%= val %>">Edit FileName</a>


                            </div>
                            
                        
                        
                       </div> 
               <% }) %>

            <% } else{ %>
                <h3 class="text-zinc-100">No Tasks Assigned Yet !</h3>
             <% } %>
            
           
           
            
           
                
        </div>
    </div>
    
</body>
</html>